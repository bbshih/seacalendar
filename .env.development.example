# SeaCalendar Development Environment
# Copy this file to .env.development and fill in your values

# ============================================================================
# Database
# ============================================================================
DATABASE_URL="postgresql://dev:dev@localhost:5432/seacalendar_dev"

# ============================================================================
# API Server
# ============================================================================
API_PORT=3001
JWT_SECRET="dev-secret-change-in-production"
WEB_APP_URL="http://localhost:5173"
NODE_ENV="development"

# ============================================================================
# Discord Bot (TEST BOT - create a separate test bot!)
# ============================================================================
# Create a test Discord bot at: https://discord.com/developers/applications
DISCORD_TOKEN="your-test-bot-token-here"
DISCORD_CLIENT_ID="your-test-bot-client-id"
DISCORD_CLIENT_SECRET="your-test-bot-client-secret"
DISCORD_GUILD_ID="your-test-discord-server-id"

# OAuth2 Redirect (for web login)
DISCORD_REDIRECT_URI="http://localhost:3001/api/auth/discord/callback"

# ============================================================================
# Web App (Vite)
# ============================================================================
VITE_API_URL="http://localhost:3001"
VITE_WS_URL="ws://localhost:3001"

# ============================================================================
# AI/LLM Services (Optional)
# ============================================================================
# Anthropic Claude API for advanced date parsing
# Get your key at: https://console.anthropic.com
# Optional - falls back to local parsing if not provided
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

